<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <ApplicationIcon>Resources\LabelZoom.ico</ApplicationIcon>
    <SignAssembly>False</SignAssembly>
    <Title>LabelZoom MOCA Client</Title>
    <PackageProjectUrl>https://www.labelzoom.net</PackageProjectUrl>
    <Description>A MOCA client for .NET, sponsored by LabelZoom</Description>
    <PackageIcon>labelzoom-mark.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/labelzoom/labelzoom-moca-client-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>moca,blueyonder,jda,redprairie,blue yonder</PackageTags>
    <Authors>LabelZoom</Authors>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Resources\LabelZoom.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Link="Resources\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\labelzoom-mark.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
